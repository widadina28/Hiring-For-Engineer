<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:elevation="5dp"
            app:cardCornerRadius="7dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFF">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_engineer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_baseline_person_24"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img_engineer"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_name_engineer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="600"
                        android:fontFamily="@font/open_sans"
                        android:text="Rosyida Widadina Ulya"
                        android:textColor="#1f2a36"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Android Developer"
                        android:textColor="#9ea0a5"
                        android:textSize="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_margin="5dp"
                        android:orientation="horizontal" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
</layout>